{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Corzas Serpens Dev Manager",
    "version": "1.0.0",
    "identifier": "com.coreycorza.serpens-dev-manager",
    "build": {
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Corzas Serpens Dev Manager",
                "width": 900,
                "height": 900,
                "minWidth": 700,
                "minHeight": 550,
                "resizable": true,
                "fullscreen": false,
                "visible": true,
                "decorations": true,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "../python/**/*"
        ],
        "windows": {
            "nsis": {
                "installMode": "currentUser"
            }
        }
    }
}